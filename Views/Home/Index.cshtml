@{
    ViewBag.Title = "Home Page";
}
<style>
    body {
        background: -webkit-linear-gradient(left,grey, black, grey);
    }
</style>
<div class="container" style="padding-top:2%;margin-left:auto; margin-right:auto">
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
        <!-- Indicators -->
        <ol class="carousel-indicators">
            <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
            <li data-target="#myCarousel" data-slide-to="1"></li>
            <li data-target="#myCarousel" data-slide-to="2"></li>
        </ol>

        <!-- Wrapper for slides -->
        <div class="carousel-inner">

            <div class="item active">
                <img src="~/Content/image/books1.jpg" alt="WELCOME" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Welcome readers!</h3>
                    <p>Books At Your Door Step helps you connect to the readers around the world,</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/image/books2.jpg" alt="LIBRARIANS" style="width:100%;">
                <div class="carousel-caption" style="margin-bottom: 25%; margin-right:30%">
                    <h3>Wanna share a book?</h3>
                    <p>You are at the right place! Post details of your books online and get in contact with your fellow readers.</p>
                </div>
            </div>

            <div class="item">
                <img src="~/Content/image/books3.jpg" alt="BORROWERS" style="width:100%;">
                <div class="carousel-caption">
                    <h3>Wanna lend a book?</h3>
                    <p>You are at the right place! Lend books from your fellow readers.</p>
                </div>
            </div>

        </div>

        <!-- Left and right controls -->
        <a class="left carousel-control" href="#myCarousel" data-slide="prev">
            <span class="glyphicon glyphicon-chevron-left"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="right carousel-control" href="#myCarousel" data-slide="next">
            <span class="glyphicon glyphicon-chevron-right"></span>
            <span class="sr-only">Next</span>
        </a> 
    </div>
    <div class="jumbotron" style="background-color:lightgray;margin-block-start:5%">
    <p style="text-align:center">HOME</p>
    <p style="font-size:medium">
        Welcome to the 'BOOKS AT YOUR DOOR STEP WEBSITE'. Join the family and enjoy the journey of sharing books and get engaged in reading!
    </p>
    <p style="font-size:medium">
        For more details on the website go to <span style="font-style:italic">@Html.ActionLink("Help", "Help", "Home")</span>.
    </p style="font-size:medium">
    
</div>
</div>
