@model Library.Models.IndexViewModel
@{
    ViewBag.Title = "Manage";
}
<style>
    body {
        background: -webkit-linear-gradient(left,grey, black, grey);
    }

    .note {
        text-align: center;
        height: 60px;
        padding-bottom: 2%;
        background: -webkit-linear-gradient(left,black, lightgray, black);
        font-weight: bold;
        line-height: 80px;
        margin-left: 15%;
        margin-right: 15%;
        margin-top: 2%;
        color: black;
    }

    .form-content {
        padding-left: 1%;
        padding-top: 3%;
        padding-bottom: 3%;
        border: 1px solid #ced4da;
        margin-left: 15%;
        margin-right: 15%;
        color: white;
        text-align:left;
    }

    .myclass {
        color: white;
        text-decoration: underline;
    }

        .myclass:hover {
            color: black;
        }
</style>
<h2 style="color:white;margin-left:15%">@ViewBag.Title</h2>

<p class="text-success" style="background-color:white;margin-left:15%;margin-right:15%;color:green">@ViewBag.StatusMessage</p>
        <div>
            <div class="note" style="font-size:large; padding-top:-2%">Change your account settings</div>
            <div class="form-content">
                <dl class="dl-horizontal">
                    <dt>Password:</dt>
                    <dd>
                        [
                        @if (Model.HasPassword)
                        {
                            @Html.ActionLink("Change your password", "ChangePassword")
                        }
                        else
                        {
                            @Html.ActionLink("Create", "SetPassword")
                        }
                        ]
                    </dd>
