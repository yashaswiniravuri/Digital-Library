@model IEnumerable<Library.Models.BookOrders.LibraryBook>

@{
    ViewBag.Title = "Gallery";
}

<h2>
   Added Books Gallery
</h2>
<div>
    <table class="table table-bordered table-responsive table-hover" id="tblEmployee">
        <tr>
            <th>Book</th>
            <th>Details</th>
            <th>Delete</th>
            <th>Update</th>
        </tr>
        @foreach (var item in Model)
        {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.ActionLink("Explore", "Details", new { id = item.Book_Id })
        </td>
        <td>
            @Html.ActionLink("Remove", "Delete", new { id = item.Book_Id })
        </td>
        <td>
            @Html.ActionLink("Update", "Update", new { id = item.Book_Id })
        </td>
    </tr>
        }

    </table>
</div>
<p>@Html.ActionLink("Add books","Create")</p>
